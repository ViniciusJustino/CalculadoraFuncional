<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalculadoraFuncional.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CalculadoraFuncional.Views"
    xmlns:local="clr-namespace:CalculadoraFuncional">
    
    <TabBar>
        <Tab Title="Home" Icon="house.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
       <Tab Title="Calculadora" Icon="calculator.png">
            <ShellContent ContentTemplate="{DataTemplate views:NewCalculatorPage}" />
       </Tab>
        <Tab Title="Perfil" Icon="person.png">
            <ShellContent ContentTemplate="{DataTemplate views:NewCalculatorPage}" />
        </Tab>
        <Tab Title="Configurações" Icon="gear.png">
            <ShellContent ContentTemplate="{DataTemplate views:ConfigurationPage}" />
        </Tab>

    </TabBar>


</Shell>